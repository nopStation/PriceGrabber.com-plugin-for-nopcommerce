@{
    Layout = "_ConfigurePlugin";
}
@model Nop.Plugin.Feed.PriceGrabber.Models.FeedPriceGrabberModel

<form asp-controller="FeedPriceGrabber" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ProductPictureSize" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ProductPictureSize" />
                        <span asp-validation-for="ProductPictureSize"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="CurrencyId" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="CurrencyId" asp-items="Model.AvailableCurrencies" />
                        <span asp-validation-for="CurrencyId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="generate" class="btn btn-primary" value="@T("Plugins.Feed.PriceGrabber.Generate")" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        @Html.Raw(Model.GenerateFeedResult)
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
